{
    "name": "diatechnis/twig-single-file-components",
    "description": "Create Vue-like single components with Twig",
    "type": "library",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Kelly",
            "email": "puritandesigns@gmail.com"
        }
    ],
    "require": {
        "php": ">7.0",
        "roave/security-advisories": "dev-master",
        "twig/twig": "^2.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.2"
    },
    "autoload": {
        "psr-4": {
            "TwigSingleFileComponents\\": "src/TwigSingleFileComponents/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/Tests/"
        }
    }
}
